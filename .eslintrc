{
    "env": {
        "browser": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "eslint:recommended"
    ],
    "ignorePatterns": ["**/*.css"],
    "parser": "@babel/eslint-parser", 
    "parserOptions": {
      "ecmaVersion": 8, 
      "requireConfigFile": false,
      "babelOptions": {
        "presets": ["@babel/preset-react"]
      },
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
      }
    }
}